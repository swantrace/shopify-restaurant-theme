        </svg>
        </a>
      {%- endif -%}



        </div>
      </div>
    </div>
</div>
<div class="copy-right bg-{{ settings.default_style_mode }}-copyright text-{{settings.default_style_mode}}-copyright-text">
    <small class="py-10 d-block text-center w-100">@2020 LOGO Restaurant. All Rights Reserved</small>
</div>
{% render 'common-section-styles' %}

{% schema %}
{
  "name": {
    "en": "Footer"
  },
  "class": "static-section static-section--footer",
  "tag": "footer",
  "max_blocks": 2,
  "settings": [
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "img_bg",
      "label": "Background image"
    },
    {
      "type": "color",
      "id": "color_bg",
      "label": "Background color"
    },
    {
      "type": "header",
      "content": {
        "en": "Layout"
      }
    },
    {
      "type": "select",
      "id": "section_width",
      "label": {
        "en": "Section Width"
      },
      "default": "full",
      "options": [
        {
          "label": {
            "en": "Container Width"
          },
          "value": "container"
        },
        {
          "label": {
            "en": "Full Width"
          },
          "value": "full"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "disable_on_mobile",
      "label":{
        "en": "Disable on mobile"
      },
      "default": false
    },
    {
      "type": "checkbox",
      "id": "disable_on_tablet",
      "label":{
        "en": "Disable on tablet"
      },
      "default": false
    },
    {
      "type": "checkbox",
      "id": "disable_on_desktop",
      "label":{
        "en": "Disable on desktop"
      },
      "default": false
    },
    {
      "type": "header",
      "content": {
        "en": "Footer Content"
      }
    },
    {
      "type": "image_picker",
      "id": "light_logo_img",
      "label":{
        "en":"Logo image in light mode"
      }
    },
    {
      "type": "image_picker",
      "id": "dark_logo_img",
      "label":{
        "en":"Logo image in dark mode"
      }
    },
    {
      "type": "checkbox",
      "id": "display_social_icons",
      "label":{
        "en": "Display Social Icons"
      },
      "default": true
    }
  ],
  "blocks":  [
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "main-menu",
          "info": "This menu won't show dropdown items."
        }
      ]
    }
  ]
}
{% endschema %}