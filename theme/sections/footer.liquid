<div class="
  section-inner-wrapper
  {% if section.settings.disable_on_mobile %}disable_on_mobile{% endif %}
  {% if section.settings.disable_on_tablet %}disable_on_tablet{% endif %}
  {% if section.settings.disable_on_desktop %}disable_on_desktop{% endif %}
  bg-{{ settings.default_style_mode }}-footer
  pb-0
 ">
 <div class="{% if section.settings.section_width == 'container' %}container {% else %}container-fluid{% endif %}"> 
  <div class="row align-self-start">
    {% assign footer_logo_img = settings.default_style_mode | append: '_logo_img'%}

        <div class="col col-12 col-md-3 text-center">
          <img alt="Datomar Theme Footer Logo" class="logo_image footer_logo_image mb-20"  src="{{ section.settings[footer_logo_img] | img_url: '200x' }}"/>
        </div>

        {% if section.blocks.size %}
            <div class="site-footer-blocks col col-12 col-md-6 column-count-{{ section.blocks.size }} d-flex flex-wrap ">
                {% for block in section.blocks %}
                  {% assign links = linklists[block.settings.menu].links %}
                    <div class="col col-12 col-md-6 ">
                      <ul class="footer-links-list list-unstyled text-center">
                        {% for link in links %}
                          <li class="footer-link pb-3">
                            <a class="text-{{settings.default_style_mode}}-footer-text" href="{{ link.url }}">{{ link.title | escape }}</a>
                          </li>
                          {% endfor %}
                      </ul>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <div class="col col-12 col-md-2 text-center social-icons">
          <div class="social-icons mb-20">

            {%- if settings.social_facebook_link != blank -%}
            <a class="social-link" href="{{settings.social_facebook_link}}" target="_blank">
              <svg
              aria-hidden="true"
              focusable="false"
              role="presentation"
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 28 28"
