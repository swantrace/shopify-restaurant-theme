<div class="
                                          section-inner-wrapper
                                          {% if section.settings.disable_on_mobile %}disable_on_mobile{% endif %}
                                          {% if section.settings.disable_on_tablet %}disable_on_tablet{% endif %}
                                          {% if section.settings.disable_on_desktop %}disable_on_desktop{% endif %}
                                          bg-{{ settings.default_style_mode }}
                                          {{ section.settings.style }}
                                          ">
    <div class="{% if section.settings.section_width == 'container' %}container {% else %}container-fluid{% endif %} newsletter-wrap"> 
      <div class="row align-items-center justify-content-between">
        
        <p class="col text-center mb-6"> <span class="triangle-down"> </span></p>

        <div class="d-flex p-10 p-md-15 p-lg-30 flex-wrap {% if section.settings.style == 'styleB' %}align-items-end{% endif %} ">

          {% if section.settings.style == 'styleB' %} <div class="col col-12 col-lg-5"> {% endif %}

            <div class="col col-12 {% if section.settings.style == 'styleA' %}col-lg-6{% endif %} ">
                <h5 class="font-weight-light">{{ section.settings.section_title }}</h5>
            </div>

            <div class="col col-12 {% if section.settings.style == 'styleA' %}col-lg-6{% endif %} ">
                <div class="font-weight-light subheading-content">
                  {{ section.settings.subheading }}
                </div>
            </div>

          {% if section.settings.style == 'styleB' %}</div>{% endif %}
      
          <form class="newsletter-form col {% if section.settings.style == 'styleA' %}col-12 col-lg-12{% else %}col-12 col-lg-7{% endif %} d-flex  flex-wrap pt-20" method="post">
            {% unless section.settings.style == 'styleB' %} <div class="form-input {% if section.settings.style == 'styleA' %}col-12 col-lg-5 pl-0{% endif %}"><input class="form-control" name="name" placeholder="Name" type="text"></div>{% endunless %}
              <div class="form-input {% if section.settings.style == 'styleA' %}col-12 col-lg-5 pl-0 pl-lg-10{% else %}col-12 col-lg-10{% endif %} "><input class="form-control" name="email" placeholder="Email" type="email"></div>
              <div class="form-input col-12 col-lg-2 text-center text-lg-right mt-15 mt-lg-0">
                  <button class="btn {% if settings.default_style_mode == 'light' %}btn-white{% endif %}" type="submit">{{ section.settings.button_label }}</button>
              </div>
          </form>


        </div>

      </div>
    </div>



    </div>
</div>
{% render 'common-section-styles' %}

<style>

#shopify-section-{{ section.id }} .newsletter-wrap{
  padding: 35px 50px;
}

#shopify-section-{{ section.id }} .form-control{
  border: none;
  background-color: transparent;
  padding: 1rem .5rem;
}

#shopify-section-{{ section.id }} .newsletter-form .btn{
  padding: 1rem 1.8rem;
}

#shopify-section-{{ section.id }} .form-control{
  border: none;
  background-color: transparent;
  border-bottom: 1px solid #fff;
  padding: 1rem .5rem;
}

/**** Dark Mode *****/
#shopify-section-{{ section.id }} .bg-dark .row
{
  border: 1px solid #000000;
  color: #000000;
}
#shopify-section-{{ section.id }} .bg-dark.styleA .newsletter-wrap, .bg-dark.styleB .newsletter-wrap{
  background-color: #fff;
}
#shopify-section-{{ section.id }} .bg-dark .row
{
  border: 1px solid #000000;
  color: #000000;
}

#shopify-section-{{ section.id }} .bg-dark .btn{
  background-color: #000;
  color: #fff;
}


#shopify-section-{{ section.id }} .bg-light .form-control{
  color: #000000;
}

#shopify-section-{{ section.id }} .bg-dark .triangle-down
{
  border-top: 25px solid #000000;
}

#shopify-section-{{ section.id }} .bg-dark .form-control{
  border-bottom: 1px solid #000000;
  color: #000000;
}

/**** Light Mode ****/
#shopify-section-{{ section.id }} .bg-light.styleA .newsletter-wrap, .bg-light.styleB .newsletter-wrap{
  background-color: #000000;
}

#shopify-section-{{ section.id }} .bg-light .row
{
  border: 1px solid #fff;
  color: #fff;
}

#shopify-section-{{ section.id }} .bg-light .form-control{
  border-bottom: 2px solid #fff;
  color: #fff;
}

#shopify-section-{{ section.id }} .triangle-down
{
  width: 0;
  height: 0;
  border-left: 60px solid transparent;
  border-right: 60px solid transparent;
  display: inline-block;
}

#shopify-section-{{ section.id }} .bg-light .triangle-down
{
  border-top: 25px solid #fff;
}



#shopify-section-{{ section.id }} .subheading-content p{
  margin-bottom: 0;
}

</style>

