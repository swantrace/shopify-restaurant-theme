                          {
                            "type": "text",
                            "id": "button_label",
                            "label": {
                              "en": "Button text"
                            }
                          }
                        ],
                        "presets": [
                          {
                            "name": {
                              "en": "Newsletter"
                            },
                            "category": {
                              "en": "Promotional"
                            }
                          }
                        ]
                      }
