				}
			]
		},
		{
			"type": "text",
			"id": "title_text",
			"label": "Title text"
		},
		{
			"type": "richtext",
			"id": "paragraphs",
			"label": "Paragraphs" 
		}
	  ]
	}
  ]
}
{% endschema %}

