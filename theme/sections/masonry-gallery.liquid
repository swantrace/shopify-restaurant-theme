{% schema %}
{
  "name": {
    "en": "Masonry gallery"
  },
  "class": "index-section index-section--masonry",
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "label": {
        "en": "Section width"
      },
      "default": "full",
      "options": [
        {
          "label": {
            "en": "Container Width"
          },
          "value": "container"
        },
        {
          "label": {
            "en": "Full Width"
          },
          "value": "full"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "disable_on_mobile",
      "label":{
        "en": "Disable on mobile"
      },
      "default": false
    },
    {
      "type": "checkbox",
      "id": "disable_on_tablet",
      "label":{
        "en": "Disable on tablet"
      },
      "default": false
    },
    {
      "type": "checkbox",
      "id": "disable_on_desktop",
      "label":{
        "en": "Disable on desktop"
      },
      "default": false
    },
    {
      "type": "text",
      "id": "section-title",
      "label": {
        "en": "Title"
        }
    },
    {
      "type": "text",
      "id": "section-subtitle",
      "label": {
        "en": "Subtitle"
        }
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": {
        "en": "Image"
      },
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": {
            "en": "Image"
          }
        }
      ]
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Masonry gallery"
      },
      "category": {
        "en": "image"
      }
    }
  ]
}
{% endschema %}